{
    "compilerOptions": {
        "lib": [
            "ES5",
            "ES2015"
        ],
        "typeRoots": [
            "./probe/generated",
            "./probe/user"
        ],
        "target": "ES2015",
        "rootDirs": [
            "server_scripts",
            "startup_scripts",
            "client_scripts"
        ],
        "module": "NodeNext",
        "moduleResolution": "NodeNext"
    },
    "include": [
        "**/*.js",
        "**/*.ts",
        "probe/**/*.d.ts"
    ]
}
